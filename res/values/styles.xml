<resources>


    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light"/>
    
    <style name="ResignButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/resign_button</item>
        <item name="android:textColor">@color/resign_border</item>
    </style>
    
     <style name="ResignButtonDisabled">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:background">@drawable/resign_disabled</item>
        <item name="android:textColor">@color/resign_border</item>
    </style>
</resources>
